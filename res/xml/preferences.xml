<CheckBoxPreference android:key="AutoUpdateVotes" android:title="@string/pref_auto_update_votes" android:defaultValue="false" android:summaryOff="@string/pref_auto_update_votes_off" android:summaryOn="@string/pref_auto_update_votes_on"></CheckBoxPreference>

</PreferenceCategory>
<PreferenceCategory android:title="@string/pref_maps">
