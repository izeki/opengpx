<PreferenceCategory android:title="@string/pref_ui"><ListPreference android:entryValues="@array/coordinate_format_values" android:key="CoordinateFormat" android:entries="@array/coordinate_format_items" android:defaultValue="DM" android:title="@string/pref_coord_format" android:summary="@string/pref_coord_format_summary"></ListPreference>
