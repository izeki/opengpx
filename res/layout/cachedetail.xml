<?xml version="1.0" encoding="utf-8"?>

<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<TabWidget
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:id="@android:id/tabs" />
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<ScrollView android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:id="@+id/CacheDetailDescriptionScrollView">
				<LinearLayout android:id="@+id/CacheDescriptionLinearLayout"
					android:orientation="vertical" android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="horizontal" android:id="@+id/IconNameLayout" android:layout_gravity="center_vertical" android:padding="2dip">
					  <ImageView android:id="@+id/CacheTypeImage" android:minHeight="32dip" android:minWidth="32dip" android:layout_height="fill_parent" android:layout_width="wrap_content" android:layout_gravity="center_vertical" android:paddingRight="2dip"></ImageView>
					  <TextView android:id="@+id/CacheDetailName" android:layout_width="fill_parent" android:layout_height="fill_parent" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center_vertical"/>
                    </LinearLayout>
					<TextView android:id="@+id/CacheDetailLinkCountryCoords"
						android:layout_width="fill_parent" android:layout_height="fill_parent"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:autoLink="web" />
					<TextView android:id="@+id/CacheDetailPlacedBy"
						android:layout_width="fill_parent" android:layout_height="fill_parent"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:paddingTop="4px" />
					<LinearLayout android:id="@+id/CacheDescriptionLinearLayout"
						android:orientation="horizontal" android:layout_width="fill_parent"
						android:layout_height="fill_parent">
						<TextView android:id="@+id/CacheDetailContainerLabel"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:text="@string/cache_detail_size" />
						<TextView android:id="@+id/CacheDetailContainer"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceSmall" android:paddingLeft="3dp" android:paddingRight="3dp"/>
						<TextView android:id="@+id/CacheDetailDifficultyLabel"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:text="@string/cache_detail_difficulty" />
						<ImageView android:id="@+id/CacheDetailDifficulty"
							android:layout_height="14dip" android:layout_width="65dip" android:paddingLeft="2dip" android:paddingRight="2dip" android:layout_gravity="center_vertical"/>
						<TextView android:id="@+id/CacheDetailTerrainLabel"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:text="@string/cache_detail_terrain" />
						<ImageView android:id="@+id/CacheDetailTerrain"
							android:layout_height="14dip" android:layout_width="65dip" android:paddingLeft="2dip" android:paddingRight="2dip" android:layout_gravity="center_vertical"/>
					</LinearLayout>
					<TextView android:id="@+id/CacheDetailDistance"
						android:layout_width="fill_parent" android:layout_height="fill_parent"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:paddingBottom="4px" />
				
</LinearLayout>
			</ScrollView>
			<ListView android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:id="@+id/WaypointList" />
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:orientation="vertical"
				android:id="@+id/CacheDetailLogLayout">
				<ListView android:layout_width="fill_parent"
					android:layout_height="0px" android:layout_weight="1" android:id="@+id/LogList" />
				<TextView android:id="@+id/CacheLogStats"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:background="#c8c8c8" android:textColor="#000000"
					android:text="Hello world" />
			</LinearLayout>
			<ScrollView android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:id="@+id/CacheDetailLogVisitScrollView">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:orientation="vertical"
					android:id="@+id/LogVisitLayout">
					<Spinner android:id="@+id/CacheLogVisitType"
						android:entries="@array/log_types" android:layout_width="fill_parent"
						android:layout_height="wrap_content" />
					<EditText android:id="@+id/CacheLogVisitText"
						android:layout_width="fill_parent" android:layout_height="wrap_content" />
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="fill_parent" android:orientation="horizontal"
						android:id="@+id/LogVisitButtonLayout" android:padding="3dp" android:gravity="center">
						<Button android:id="@+id/CacheLogVisit"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content"
							android:text="@string/cache_detail_send_log"/>
						<Button android:id="@+id/CacheLogVisitSave"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content"
							android:text="@string/cache_detail_save_log"/>
					</LinearLayout>
				</LinearLayout>
			</ScrollView>
		</FrameLayout>
	</LinearLayout>
</TabHost>
